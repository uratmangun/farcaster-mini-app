{
  "name": "farcaster-mini-app",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "generate-all": "node scripts/generate-farcaster-auth.js && node scripts/generate-flux-images.js && node scripts/generate-meta-config.js",
    "prebuild": "node scripts/generate-meta-config.js",
    "build": "pnpm prebuild && remix vite:build",
    "dev": "concurrently \"pnpm dev:remix\" \"pnpm dev:functions\" --names \"remix,functions\" --prefix-colors \"cyan,magenta\"",
    "dev:remix": "node scripts/generate-meta-config.js && remix vite:dev",
    "dev:functions": "deno run --allow-net --allow-env --allow-read --watch functions/router.ts",
    "functions:router": "deno run --allow-net --allow-env --allow-read --watch functions/router.ts",
    "functions:api": "deno run --allow-net --allow-env --watch functions/api.ts",
    "lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
    "lint:deno": "deno lint functions/",
    "fmt:deno": "deno fmt functions/",
    "check:deno": "deno check functions/*.ts",
    "preview": "npx serve build/client",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@farcaster/miniapp-sdk": "^0.1.8",
    "@noble/ed25519": "^2.0.0",
    "@remix-run/cloudflare": "^2.17.0",
    "@remix-run/node": "*",
    "@remix-run/react": "*",
    "@remix-run/serve": "*",
    "dotenv": "^17.2.1",
    "isbot": "^4.1.0",
    "ky": "^1.8.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "together-ai": "^0.22.0"
  },
  "devDependencies": {
    "@remix-run/dev": "*",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "autoprefixer": "^10.4.19",
    "concurrently": "^9.2.0",
    "eslint": "^8.38.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.1.6",
    "vite": "^6.0.0",
    "vite-tsconfig-paths": "^4.2.1"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}